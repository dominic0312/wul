= form_for @bankcard do |f|
  - if @bankcard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bankcard.errors.count, "error")} prohibited this bankcard from being saved:"
      %ul
        - @bankcard.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :bankname
    = f.text_field :bankname
  .field
    = f.label :cardid
    = f.text_field :cardid
  .actions
    = f.submit 'Save'
